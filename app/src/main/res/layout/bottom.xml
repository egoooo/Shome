<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:background="#ffffffff"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_tab_control"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">
        <ImageButton
            android:background="#00000000"
            android:clickable="false"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:src="@drawable/control"
            android:scaleType="fitXY" />
        <TextView
            android:textColor="#ffffffff"
            android:id="@+id/control_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家居控制" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_tab_monitor"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">
        <ImageButton
            android:background="#00000000"
            android:clickable="false"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:src="@drawable/moni"
            android:scaleType="fitXY" />
        <TextView
            android:textColor="#ffffffff"
            android:id="@+id/monitor_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="环境监测" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_tab_energy"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">
        <ImageButton
            android:background="#00000000"
            android:clickable="false"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:src="@drawable/energy"
            android:scaleType="fitXY" />
        <TextView
            android:textColor="#ffffffff"
            android:id="@+id/energy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="能源管理" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_tab_safe"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">
        <ImageButton
            android:background="#00000000"
            android:clickable="false"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:src="@drawable/safe"
            android:scaleType="fitXY" />
        <TextView
            android:textColor="#ffffffff"
            android:id="@+id/safe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能安防" />
    </LinearLayout>
</LinearLayout>