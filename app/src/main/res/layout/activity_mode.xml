<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="newjohn.com.shome.activity.ModeActivity"
    android:gravity="center"
    android:background="@drawable/bgk"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="7.0dip"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="1.0dip"
        app:cardElevation="5.0dip"
        app:contentPadding="5.0dip"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
       <TextView
           android:layout_width="match_parent"
           android:layout_height="20dp"
           android:text="选择模式"
           android:gravity="center"/>


    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="7.0dip"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="1.0dip"
            app:cardElevation="5.0dip"
            app:contentPadding="5.0dip"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            >
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7.0dip">

                <TextView
                    android:textSize="20.0sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我在家" />
                <TextView
                    android:background="#ff1296db"
                    android:layout_width="fill_parent"
                    android:layout_height="2.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="10.0dip" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/inhome"
                    android:id="@+id/inhome"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="7.0dip"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="1.0dip"
            app:cardElevation="5.0dip"
            app:contentPadding="5.0dip"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            >
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7.0dip">

                <TextView
                    android:textSize="20.0sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我在外面" />
                <TextView
                    android:background="#ff1296db"
                    android:layout_width="fill_parent"
                    android:layout_height="2.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="10.0dip" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/outside"
                    android:id="@+id/outside"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>
