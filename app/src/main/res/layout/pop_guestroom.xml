<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="500dp"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7.0dip"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="1.0dip"
        app:cardElevation="5.0dip"
        app:contentPadding="5.0dip"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.0dip">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/close"/>
            <TextView
                android:textSize="20.0sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客卧控制" />
            <TextView
                android:background="#ff1296db"
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="10.0dip" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="7.0dip">

                <ImageView
                    android:layout_width="70.0dip"
                    android:layout_height="70.0dip"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/light" />

                <ImageView
                    android:layout_width="45.0dip"
                    android:layout_height="36.0dip"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/off" />
                <TextView
                    android:id="@+id/guest_off"
                    android:layout_width="50.0dip"
                    android:layout_height="40.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_background_right"
                    android:gravity="center"
                    android:text="off" />
                <TextView
                    android:id="@+id/guest_on"
                    android:layout_width="50.0dip"
                    android:layout_height="40.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="1.0dip"
                    android:layout_toLeftOf="@id/guest_off"
                    android:background="@drawable/button_background_left"
                    android:gravity="center"
                    android:text="on" />


            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>